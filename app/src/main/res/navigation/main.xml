<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main.xml"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.azimjonc.projects.lookmart.presentation.sign_in.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.azimjonc.projects.lookmart.presentation.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">

        <action
            android:id="@+id/to_signInFragment"
            app:destination="@+id/signInFragment" />

    </fragment>
</navigation>